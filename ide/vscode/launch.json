{
    "version": "0.2.0",
    "configurations": [
      {
          "name": "Jest File",
          "type": "node",
          "request": "launch",
          "runtimeArgs": [
            "--inspect-brk",
            "${workspaceRoot}/node/node_modules/.bin/jest",
            "--runInBand",
            "${relativeFile}"
          ],
          "cwd": "${workspaceRoot}/node/",
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "port": 9229
      },
      {
        "name": "Debug Jest Tests",
        "type": "node",
        "request": "launch",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceRoot}/node/node_modules/.bin/jest",
          "--runInBand"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      }
    ]
  }